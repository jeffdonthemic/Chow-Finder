<%= page do %>
  <%= header do %>
    <h1>Locations</h1>
  <% end %>

  <%= content do %>
    <ul data-role='listview'>
      <% @locations.each do |location| %>
          <li>
            <%= link_to location["Name"]+' ('+location["Facilities__c"].to_i.to_s+')', location_path(location["Id"]) %>
          </li>
      <% end %>
      <li data-theme='e' data-icon='plus'><%= link_to "Location not listed? Add it here!", new_path, "data-icon" => "plus" %></li>
    </ul>
  <% end %>
  <div data-role="footer">		
    <div data-role="navbar" data-iconpos="bottom">
      <ul>
        <li><a href="/location/favorites" data-role="button" data-icon="star">Favorites</a></li>
        <li><a href="/location/index" data-role="button" data-icon="home">Locations</a></li>
        <li><a href="/content/about" data-role="button" data-icon="info">About</a></li>
      </ul>
    </div>
  </div>
<% end %>